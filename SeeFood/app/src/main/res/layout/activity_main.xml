<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ceg4110.seefood.MainActivity"
    >

    <Button
        android:id="@+id/takePictureButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:onClick="dispatchTakePictureIntent"
        android:text="@string/takePictureS"
        tools:layout_editor_absoluteX="220dp"
        tools:layout_editor_absoluteY="335dp"
        android:layout_marginTop="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ImageView01" />

    <ImageView
        android:id="@+id/ImageView01"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/sendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="sendPicture"
        android:text="@string/sendS"
        android:layout_alignBaseline="@+id/takePictureButton"
        android:layout_alignBottom="@+id/takePictureButton"
        android:layout_alignEnd="@+id/ImageView01" />

    <Button
        android:id="@+id/browseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/takePictureButton"
        android:layout_below="@+id/takePictureButton"
        android:layout_marginTop="10dp"
        android:onClick="performFileSearch"
        android:text="@string/browseS" />

    ></RelativeLayout>


