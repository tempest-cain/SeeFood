<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainActivityLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="ceg4110.seefood.MainActivity"
    android:background="@mipmap/background"

    >

    <ImageView
        android:id="@+id/cameraButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_above="@+id/browseButton"
        android:layout_alignStart="@+id/browseButton"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/camera" />

    <ImageView
        android:id="@+id/browseButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/browse"
        android:layout_above="@+id/galleryButton"
        android:layout_alignStart="@+id/galleryButton"
        android:layout_marginBottom="10dp"
        />

    <ImageView
        android:id="@+id/galleryButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/gallery"
        android:layout_above="@+id/statsButton"
        android:layout_alignStart="@+id/statsButton"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:id="@+id/statsButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/stats"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp" />

</RelativeLayout>